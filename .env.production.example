
# Production Environment Configuration

# Application
NODE_ENV=production
PORT=5000
FRONTEND_URL=https://your-domain.com

# Database
DATABASE_URL=postgresql://username:password@hostname:5432/production_db

# Security
JWT_SECRET=your-super-secure-jwt-secret-key-here-min-32-chars
SESSION_SECRET=your-super-secure-session-secret-here-min-32-chars

# CORS
ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=warn

# API Keys (replace with your actual keys)
ALPHA_VANTAGE_API_KEY=your_production_alpha_vantage_key
POLYGON_API_KEY=your_production_polygon_key
NEWS_API_KEY=your_production_news_api_key

# Error Reporting (optional)
SENTRY_DSN=your_sentry_dsn_here

# Analytics (optional)
GOOGLE_ANALYTICS_ID=your_ga_id_here

# Email Service (optional)
SMTP_HOST=your_smtp_host
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password

# SSL/TLS (if needed)
SSL_CERT_PATH=/path/to/cert.pem
SSL_KEY_PATH=/path/to/key.pem
